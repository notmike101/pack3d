{
  "appId": "Pack3D",
  "productName": "Pack3D",
  "copyright": "Copyright Â© 2023 Mike Orozco @notmike101 <me@mikeorozco.dev>",
  "asar": true,
  "directories": {
    "output": "release"
  },
  "files": [
    "dist"
  ],
  "mac": {
    "target": "dmg",
    "artifactName": "${productName}.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "msi",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "./logo.ico",
    "artifactName": "${productName}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "installerIcon": "./logo.ico"
  },
  "extraFiles": [
    {
      "from": "./ktx2_bins",
      "to": "./ktx2_bins"
    }
  ]
}
